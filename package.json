{
	"name": "meeboter",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.2.5",
	"engines": {
		"node": ">=18",
		"bun": ">=1.0.0"
	},
	"workspaces": [
		"apps/**",
		"apps/bots/providers/**",
		"packages/**",
		"!**/node_modules/**",
		"!**/.next/**",
		"!**/dist/**"
	],
	"prisma": {
		"schema": "packages/database/prisma/schema.prisma",
		"seed": "bun packages/database/seeds/production.ts"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"typecheck": "turbo run typecheck",
		"lint": "eslint --fix && biome check . --write --max-diagnostics 1000 && knip",
		"turbos": "bun scripts/turbos.ts",
		"filter": "bun scripts/filter.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@stylistic/eslint-plugin": "^5.2.0",
		"@types/node": "^24.3.0",
		"@typescript-eslint/parser": "^8.37.0",
		"eslint": "^9.31.0",
		"knip": "^5.76.0",
		"turbo": "^2.5.7",
		"typescript": "^5"
	},
	"overrides": {
		"@types/react": "^18.3.3"
	}
}
