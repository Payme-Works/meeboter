{
	"name": "live-boost",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.15.0",
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	},
	"prisma": {
		"schema": "packages/database/prisma/schema.prisma",
		"seed": "tsx packages/database/seeds/production.ts"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"typecheck": "turbo run typecheck",
		"lint": "eslint --fix && biome check . --write --max-diagnostics 1000",
		"test": "turbo run test",
		"test:coverage": "turbo run test:coverage",
		"test:e2e": "turbo run test:e2e",
		"test:e2e:coverage": "turbo run test:e2e:coverage",
		"turbos": "node scripts/turbos.js",
		"filter": "node scripts/filter.js",
		"postinstall": "pnpm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/node": "^24.3.0",
		"tsx": "^4.20.5",
		"turbo": "^2.5.6",
		"@stylistic/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^8.37.0",
		"eslint": "^9.31.0",
		"typescript": "^5"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "^18.3.3"
		}
	}
}
