{
  "name": "live-boost",
  "private": true,
  "prettier": "@live-boost/prettier-config",
  "packageManager": "pnpm@10.15.0",
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/seeds/production.ts"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:coverage": "turbo run test:e2e:coverage",
    "turbos": "node scripts/turbos.js",
    "filter": "node scripts/filter.js"
  },
  "devDependencies": {
    "@live-boost/prettier-config": "workspace:*",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.3"
    }
  }
}