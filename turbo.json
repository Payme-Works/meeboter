{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"passThroughEnv": ["SKIP_ENV_VALIDATION"]
		},
		"dev": {
			"dependsOn": ["^build"]
		},
		"typecheck": {},
		"lint": {
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"test:coverage": {
			"dependsOn": ["^build"]
		},
		"test:e2e": {
			"dependsOn": ["^build"]
		},
		"test:e2e:coverage": {
			"dependsOn": ["^build"]
		}
	}
}
